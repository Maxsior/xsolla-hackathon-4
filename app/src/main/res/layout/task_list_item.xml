<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <CheckBox
            android:id="@+id/done"
            android:width="30dp"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true" android:layout_alignParentStart="true" android:layout_marginStart="12dp"
            android:layout_marginTop="12dp" android:layout_alignParentTop="true"/>

    <TextView
            android:id="@+id/name"
            android:layout_weight="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Task Name" android:layout_toEndOf="@+id/done" android:layout_marginStart="22dp"
            android:layout_marginTop="14dp" android:layout_alignParentTop="true"/>

</RelativeLayout>