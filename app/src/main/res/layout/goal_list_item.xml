<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/parent_layout"
                android:clickable="true"
                android:focusable="true"
                android:onClick="goalClicked">

    <com.xsolla.hackathon4.CircularProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/goalprogress"
            progressWidth="10"
            />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Name"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/goalprogress"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:textSize="22sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline"
            android:id="@+id/deadline"
            android:textColor="#FF808080"
            android:layout_marginStart="30dp"
            android:textSize="18sp" android:layout_marginTop="8dp" android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/goalprogress"/>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="15dp" android:layout_below="@+id/goalprogress"
            android:layout_alignParentEnd="true" android:layout_marginEnd="14dp" android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"/>

</RelativeLayout>